{
  "$schema": "https://opencode.ai/config.json",
  "mcp": {
    "context7": {
      "type": "local",
      "command": ["npx", "-y", "@upstash/context7-mcp"],
      "enabled": true
    }
  },
  "permission": {
    "edit": "ask",
    "bash": {
      "*": "ask",
      "git status*": "allow",
      "git diff*": "allow",
      "git log*": "allow",
      "git commit*": "ask",
      "git push*": "deny"
    }
  },
  "plugin": [
      "@franlol/opencode-md-table-formatter@0.0.3",
      "opencode-wakatime",
      "@zenobius/opencode-skillful",
      "@plannotator/opencode@latest"
  ]
}
